<div class="d-flex align-items-center justify-content-center">
  <h2 class="h2 text-center">{{title}}</h2>
</div>

<form
  action="/api/employees"
  class="col-6 d-flex flex-column justify-content-center mx-auto"
  id="create-form"
  method="post"
>
  <div class="mb-3 mt-4">
    <div class="mb-3">
      <input
        type="text"
        class="form-control"
        name="id"
        id="id"
        placeholder="Employee ID (Autogenerated by API)"
        required="false"
        disabled="true"
      />
    </div>
    <div class="mb-3">
      <input
        type="text"
        class="form-control"
        name="firstName"
        id="firstName"
        placeholder="First Name"
        required="true"
      />
    </div>
    <div class="mb-3">
      <input
        type="text"
        class="form-control"
        name="lastName"
        id="lastName"
        required="true"
        placeholder="Last Name"
      />
    </div>
    <div class="mb-3"><input
        type="text"
        class="form-control"
        name="gender"
        id="gender"
        required="true"
        placeholder="Gender"
      /></div>
    <div class="mb-3">
      <input
        type="text"
        class="form-control"
        name="dob"
        id="dob"
        required="true"
        placeholder="Date of Birth (DD-MM-YYYY)"
      />
    </div>
    <div class="mb-3">
      <input
        type="number"
        class="form-control"
        name="age"
        id="age"
        required="true"
        placeholder="Age"
      />
    </div>
    <div class="mb-3">
      <input
        type="number"
        class="form-control"
        name="salary"
        id="salary"
        required="true"
        placeholder="Salary in Rupees (Yearly)"
      />
    </div>
    <div class="mb-3">
      <input
        type="text"
        class="form-control"
        name="department"
        id="department"
        required="true"
        placeholder="Department"
      />
    </div>
    <div class="mb-3">
      <input
        type="email"
        class="form-control"
        name="email"
        id="email"
        required="true"
        placeholder="Email"
      />
    </div>
    <div class="mb-3">
      <input
        type="text"
        class="form-control"
        name="location"
        id="location"
        required="true"
        placeholder="Location"
      />
    </div>

    <label for="isWorking" class="form-check-label pt-2 pe-1">Currently Working
      ?
      <input
        type="checkbox"
        class="form-check-input"
        name="isWorking"
        id="isWorking"
      />
    </label>
  </div>

  <input type="submit" value="submit" class="btn btn-primary btn-block w-100" />
</form>
<script>
  const createForm=document.querySelector('#create-form');
  createForm.addEventListener('submit',(e)=>{ e.preventDefault();
  createForm.reset()}
</script>